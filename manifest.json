{
    "manifest_version": 3,
    "name": "easypaste",
    "description": "Save your frequently used text!",
    "version": "1.0",
    "offline_enabled": true,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
          }
      }
  }